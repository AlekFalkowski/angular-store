# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
ij_continuation_indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
ij_angular-html_interpolation_new_line_after_start_delimiter = false
ij_angular-html_interpolation_new_line_before_end_delimiter = false
ij_angular-html_interpolation_wrap = normal
ij_angular-html_spaces_within_interpolation_expressions = true
ij_html_add_new_line_before_tags = none
ij_html_align_attributes = true
ij_html_align_text = false
ij_html_attribute_wrap = normal
ij_html_block_comment_add_space = true
ij_html_block_comment_at_first_column = false
ij_html_continuation_indent_size = 4
ij_html_do_not_align_children_of_min_lines = unset
ij_html_do_not_break_if_inline_tags = unset
ij_html_do_not_indent_children_of_tags = unset
ij_html_enforce_quotes = unset
ij_html_indent_size = 4
ij_html_inline_tags = a,abbr,acronym,b,basefont,bdo,big,br,cite,cite,code,dfn,em,font,i,img,input,kbd,label,q,s,samp,select,small,span,strike,strong,sub,sup,textarea,tt,u,var
ij_html_keep_blank_lines = 2
ij_html_keep_indents_on_empty_lines = false
ij_html_keep_line_breaks = true
ij_html_keep_line_breaks_in_text = true
ij_html_keep_whitespaces = false
ij_html_keep_whitespaces_inside = span,pre,textarea
ij_html_line_comment_at_first_column = false
ij_html_new_line_after_last_attribute = never
ij_html_new_line_before_first_attribute = when_multiline
ij_html_quote_style = unset
ij_html_remove_new_line_before_tags = br
ij_html_space_after_tag_name = false
ij_html_space_around_equality_in_attribute = false
ij_html_space_inside_empty_tag = false
ij_html_tab_width = unset
ij_html_text_wrap = normal

[*.scss]
ij_any_keep_line_breaks = true
ij_any_keep_blank_lines_in_declarations = unset
ij_scss_continuation_indent_size = 4

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false